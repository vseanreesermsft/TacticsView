@inject IStringLocalizer<UIStrings> L

<nav class="navbar navbar-expand-lg navbar-dark" style="background: #512bd4">
    <a class="navbar-brand" href="/">
        <img src="/images/dotnet-bot_@(Motivator.GetBot()).svg" height="30" class="d-inline-block align-top" alt=".NET Bot">
        TacticsView
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All" id="navlink-consider">
                    @L["ServicingConsiderShort"]
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="/servicing-approved" Match="NavLinkMatch.Prefix" id="navlink-approved">
                    @L["ServicingApprovedShort"]
                </NavLink>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="https://github.com/timheuer/tacticview/issues/new" target="_blank">@L["ReportAnIssue"]</a>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="/about" Match="NavLinkMatch.Prefix" id="navlink-about">
                    @L["AboutLabel"]
                </NavLink>
            </li>
        </ul>
    </div>
</nav>